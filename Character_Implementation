class PlayerCharacter {
private:
    int health;
    int mana;
    int level;
    int experience;
    std::vector<Item> inventory;
public:
    // Constructor and destructor
    PlayerCharacter();
    ~PlayerCharacter();

    // Getters and setters
    int getHealth();
    void setHealth(int newHealth);
    int getMana();
    void setMana(int newMana);
    int getLevel();
    void setLevel(int newLevel);
    int getExperience();
    void setExperience(int newExperience);

    // Movement methods
    void walk();
    void run();
    void jump();

    // Interaction methods
    void pickupItem(Item item);
    void attack(Enemy enemy);
    void useItem(Item item);

    // Leveling methods
    void gainExperience(int experience);
    void levelUp();
    void manageInventory();

    // Equipment methods
    void equipItem(Item item);
    void unequipItem(Item item);
    void useAbility(Ability ability);

    // Save/load methods
    void saveCharacter();
    void loadCharacter();
};
// Constructor
PlayerCharacter::PlayerCharacter() {
    health = 100;
    mana = 50;
    level = 1;
    experience = 0;
}

// Destructor
PlayerCharacter::~PlayerCharacter() {
}

// Getters and setters
int PlayerCharacter::getHealth() {
    return health;
}

void PlayerCharacter::setHealth(int newHealth) {
    health = newHealth;
}

int PlayerCharacter::getMana() {
    return mana;
}

void PlayerCharacter::setMana(int newMana) {
    mana = newMana;
}

int PlayerCharacter::getLevel() {
    return level;
}

void PlayerCharacter::setLevel(int newLevel) {
    level = newLevel;
}

int PlayerCharacter::getExperience() {
    return experience;
}

void PlayerCharacter::setExperience(int newExperience) {
